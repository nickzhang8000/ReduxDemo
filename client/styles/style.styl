@import '_normalize.styl'
body
  background-color:#EFEFEF;
.container
  background-color:#fff;
  width:720px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:40px;
  height:800px;
  padding-left: 0px;
  padding-right: 0px;

  //main page
.main-desTitle
  color: #898989;
  font-size:14px;
  margin:135px auto 90px;
.main-desContent
  color:#0D77B3;
  font-size 18px;
  width:300px;
  text-align: center;
  margin-bottom:40px;
.main-rating
  display:flex;
  flex-direction: row;
  justify-content: center;
  border:1px solid #eee;
  width: 100%;
  text-align: center;
  padding-top: 40px;
  padding-bottom: 40px;
  position:relative;
.main-rating-des
  position: absolute;
  left:120px
  top: 45px;
  color:#717171;
  font-size:14px;
  text-align: right;

  // rating page
.rating
  margin: 60px auto;
.main-desContent.rate
  margin-bottom: 10px;
.rate-subtitle
  font-size:14px;
  color: #898989;
  margin-bottom:20px;
.rating-li
  border:1px solid #eee;
  padding:50px
  list-style-type: none;
  justify-content: center;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
.rating-li li
  height:50px;
  width: 150px;
  font-size:15px;
  display: block
  padding: 6px;
  border: 1px solid #eee;
  border-radius: 8px;
  text-align: center;
  line-height: 38px;
  margin: 5px;
.rating-li li.inactive
  color: #898989;
.rating-li li.active
  background-color:#0D77B3;
  color:#fff;
.rate-done
  margin-top:40px;
  font-size:14px;
  color: #898989;
// comment page
.rating-li.comment
  border: 0px;
  padding: 0px;
.li.active.comment
  background-color:#fff;
  color:#0D77B3;
  border: 1px solid #0D77B3;
.rating.comment
  margin-bottom: 10px;
.main-desContent.rate.comment
  width: 100%
.commment-bottom
  display: flex;
  flex-direction: row;
.comment-textinput
  margin-top: 30px;
  width: 100%;
  height: 185px;
  padding: 10px;
  text-align: left;
  border:1px solid #eee;
  padding: 20px 40px;
  font-size:16px;
::-webkit-input-placeholder { /* Chrome */
  color: #ccc;
  font-size:16px;
}
// done page
.done-des
  width: 350px;
  font-size:18px;
  color:#898989;
  text-align: center;
  margin-top:300px;
